</head>
<body>
    <!-- header -->
    <div class="banner banner2">
        <div class="container">
            <div class="headr-right">
            </div>
            <div class="banner_head_top">
                <div class="logo">
                    <h1><a href="~/Home/Index">Katiau<img src="~/images/Logos/katiaulogo.png" width="50" height="50" /></a></h1>
                </div>
                <div class="top-menu">
                    <div class="content white">
                        <nav class="navbar navbar-default">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <!--/navbar header-->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav">
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li><a href="~/About/Index">Sobre</a></li>
                                    <li class="dropdown">
                                        <a href="#" class="scroll dropdown-toggle" data-toggle="dropdown">Análises<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="~/TechMundo/Index">Review TechMundo</a></li>
                                            <li><a href="~/Review/Index">Review PC World</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="~/Gallery/Index">Galeria</a></li>
                                    <li><a href="~/Store/Index">Loja</a></li>
                                    <li><a href="~/Contact/Index">Contato</a></li>
                                </ul>
                            </div>
                            <!--/navbar collapse-->
                        </nav>
                        <!--/navbar-->
                    </div>
                    <div class="clearfix"></div>
                    
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--USUARIOS-->
    <div class="nav_tabs">
        <ul>
          
                <li class="tabs">
                    <input type="radio" name="tabs" class="rd_tabs" id="tab1" checked>
                    <label for="tab1"> Usuários </label>

          
                    <div class="content_tab">
                        <section>
                            
                            <table border="1">

                                <thead>
                                <tr><a href="/Usuario/Novo/@(ViewBag.ID)">Cadastrar novo Usuário ou Adm</a></tr> 
                                    <tr class="Produto">
                                        <th class="texto">ID</th>
                                        <th class="texto">Nick</th>
                                        <th class="texto">Nome</th>
                                        <th class="texto">Sobrenome</th>
                                        <th class="texto">Email</th>
                                        <th class="texto">Senha</th>
                                        <th class="texto">Nascimento</th>
                                        <th class="texto">ImagemPerfil</th>
                                        <th class="texto">Ações</th>
                                    </tr>
                                  
                                    
                                  
                                </thead>

                                <tbody>
                               @foreach (var U in ViewBag.User)
                               {

                                    <tr>
                                        
                                        <td>@(U.ID)</td>
                                        <td>@(U.Nick)</td>
                                        <td>@(U.Nome)</td>
                                        <td>@(U.Sobrenome)</td>
                                        <td>@(U.Email)</td>
                                        <td>@(U.Senha)</td>
                                        <td>@(U.Nascimento)</td>
                                        <td>@(U.ImagemPerfil)</td>
                                        <td>
                                            
                                            <a href="/Usuario/Apagar/@(U.ID)">Apagar</a>
                                        </td>
                                    </tr>
                               }
                                </tbody>
                                
                            </table>

                        </section>
                    </div>
           
                </li>
            
                <li class="tabs">
                    <input type="radio" name="tabs" class="rd_tabs" id="tab2">
                    <label for="tab2"> Pacotes </label>

                    
                        <div class="content_tab">
                            <section>
                                <table border="1">
                                    <thead>
                                        <tr><a href="/Produto/Novo/@(ViewBag.Prod.ID)">Cadastrar um novo Pacote</a></tr> 
                                        <tr class="Produto">
                                            
                                            <th class="texto">Nome</th>
                                            <th class="texto">Categoria</th>
                                            <th class="texto">Imagem</th>
                                            <th class="texto">Descrição</th>
                                            <th class="texto">Preço</th>
                                            <th class="texto">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var P in ViewBag.Prod)
                                        {
                                            <tr>
                                                <!--PACOTES-->

                                                <td>@(P.Nome)</td>
                                                <td>@(P.Categoria)</td>
                                                <td>@(P.Imagem)</td>
                                                <td>@(P.Descricao.Substring(0, Math.Min(P.Descricao.Length, 70)) + "...")</td>
                                                <td>R$@(P.Preco)</td>
                                                <td>
                                                    <a href="/Produto/Ver/@(P.Prod.ID)">Ver</a> |
                                                    <a href="/Produto/Alterar/@(P.Prod.ID)">Alterar</a> |
                                                    <a href="/Produto/Apagar/@(P.Prod.ID)">Apagar</a>
                                                </td>
                                            </tr>
                                            
                                        }
                                            </tbody>
</table>
                            </section>
                        </div>
                    
                </li>

            <li class="tabs">
                <input type="radio" name="tabs" class="rd_tabs" id="tab3">
                <label for="tab3"> DLC </label>
                <div class="content_tab">
                    
                    <section>
                        <table border="1">
                            <thead>
                                <tr><a href="/Produto/Novo/@(ViewBag.DLCs.ID)">Cadastrar uma nova DLC</a></tr> 
                                <tr class="Produto">

                                    <th class="texto">Nome</th>
                                    <th class="texto">Categoria</th>
                                    <th class="texto">Imagem</th>
                                    <th class="texto">Descrição</th>
                                    <th class="texto">Preço</th>
                                    <th class="texto">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
@foreach (var D in ViewBag.DLCs)
                                {
                                    <tr>
                                        <!--DLC-->

                                        <td>@(D.Nome)</td>
                                        <td>@(D.Categoria)</td>
                                        <td>@(D.Imagem)</td>
                                        <td>@(D.Descricao.Substring(0, Math.Min(D.Descricao.Length, 88)) + "...")</td>
                                        <td>R$@(D.Preco)</td>
                                        <td>
                                            <a href="/Produto/Ver/@(D.DLCs.ID)">Ver</a> |
                                            <a href="/Produto/Alterar/@(D.DLCs.ID)">Alterar</a> |
                                            <a href="/Produto/Apagar/@(D.DLCs.ID)">Apagar</a>
                                        </td>
                                    </tr>
}
                            </tbody>
                        </table>
                    </section>


                </div>
            </li>

            <li class="tabs">
                <input type="radio" name="tabs" class="rd_tabs" id="tab4">
                <label for="tab4"> Outros </label>
                <div class="content_tab">



                </div>
            </li>
        </ul>
    </div>

