<!DOCTYPE HTML>
<html>
<head>
    <title>Loja</title>

    <link href="~/CSS/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/CSS/style.css" rel='stylesheet' type='text/css' />

    <!-- jQuery (necessary JavaScript plugins) -->
    <script type='text/javascript' src="~/JS/jquery-1.11.1.min.js"></script>
    <!-- Custom Theme files -->
    <link rel="stylesheet" type="text/css" href="~/CSS/common.css" />
    <link rel="stylesheet" type="text/css" href="~/CSS/style4.css" />
    <script type="text/javascript" src="~/JS/modernizr.custom.79639.js"></script>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800|Titillium+Web:400,600,700,300' rel='stylesheet' type='text/css'>
    <!-- Custom Theme files -->
    <!--//theme-style-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Katiau Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>


</head>
<body>
    <!-- banner -->
    <div class="banner bannerStore">
        <div class="container">
            <div class="headr-right">
            </div>
            <div class="banner_head_top">
                <div class="logo">
                    <h1><a href="~/Menu/Home">Katiau<img src="~/images/Logos/katiaulogo.png" width="50" height="50" /></a></h1>
                </div>
                <div class="top-menu">
                    <div class="content white">
                        <nav class="navbar navbar-default">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>

                            <!--/navbar header-->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="~/Menu/Home">Home</a></li>
                                    <li><a href="~/Menu/Equipe">Sobre</a></li>
                                    <li class="dropdown">
                                        <a href="#" class="scroll dropdown-toggle" data-toggle="dropdown">Análises<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="~/Posts/Posts">Posts</a></li>
                                            <li><a href="~/Reviews/Reviews">Review PC World</a></li>
                                        </ul>
                                    </li>

                                    <li><a href="~/Menu/Galeria">Galeria</a></li>
                                    <li><a href="~/Loja/Principal">Loja</a></li>
                                    <li><a href="~/Menu/Contato">Contato</a></li>

                                    @if (ViewBag.Logado == null)
                                    {
                                        <li class="imagemUser">
                                            <span class="loginform" id="loginform">
                                                <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                                                <script src="~/JS/index.js"></script>
                                                <img class="login-sign-image" src="~/images/usuarioHover.png"
                                                     onmouseover="this.src='/images/usuario.png'"
                                                     onmouseout="this.src='/images/usuarioHover.png'" />
                                                <div class="login">
                                                    <div class="arrow-up"></div>
                                                    <div class="formholder" style="display: block;">
                                                        <div class="randompad">
                                                            <form method="post" action="/Menu/Home">
                                                                <e class="msg-erro-login">@ViewBag.MsgErro</e>
                                                                <label class="email" name="email">Email</label>
                                                                <input type="email" id="email" name="email" />
                                                                <label class="senha" name="password">Password</label>
                                                                <input type="password" id="senha" name="senha" />
                                                                <input type="submit" value="Login" />
                                                                <h4 class="cadastrar">Não possui uma conta? <a href="~/Menu/Cadastro"><strong>Cadastre-se </strong></a></h4>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </span>
                                        </li>
                                    }
                                    @if (ViewBag.NivelAcesso == true)
                                    {
                                        <li><a href="~/Adm2/Listar">ADM</a></li>
                                    }
                                    @if (ViewBag.Logado != null)
                                    {
                                        <li class="imagemUser">
                                            <span class="loginform" id="loginform">
                                                <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                                                <script src="~/JS/index.js"></script>
                                                <img class="login-sign-image" src="~/images/usuarioHover.png"
                                                     onmouseover="this.src='/images/usuario.png'"
                                                     onmouseout="this.src='/images/usuarioHover.png'" />

                                                <div class="login">
                                                    <div class="arrow-up"></div>
                                                    <div class="formholder" style="display: block;">
                                                        <div class="randompad">
                                                            <a href="~/Perfil/Index"><img class="imagem-logado" src="~/images/img_users/@ViewBag.ImagemU" /></a>
                                                            <p class="login-user-nome">@ViewBag.NomeU <e class="nick-login"><strong>"@ViewBag.NickU"</strong></e><e class="login-user-info"> @ViewBag.SobrenomeU</e></p>
                                                            <a class="deslogar-bt" href="~/Menu/Sair"><strong>Sair</strong></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </nav>
                        <!--/navbar-->
                    </div>
                    <div class="clearfix"></div>
                    <script type="text/javascript" src="~/JS/bootstrap-3.1.1.min.js"></script>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <!--teamstarts-->
        <div class="team">
            <div class="team-top">
                <h3>Compre Já</h3>
            </div>
            <div class="team-bottom">
                <ul class="ch-grid">
                    <li>

                        <!-- Colocar Link da Pág XBOX -->
                        <a href="~/Loja/Xbox">
                            <div class="ch-item ch-img-venda-1">
                                <div class="ch-info-wrap-vendas">
                                    <div class="ch-info-vendas">
                                        <div class="ch-info-front ch-img-venda-1"></div>
                                        <div class="ch-info-back">
                                            <h3>Katiau</h3>
                                            <p>XBOX ONE</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>

                    <li>
                        <!-- Link Pág. PlayStation4 PRO -->
                        <a href="~/Loja/Playstation">
                            <div class="ch-item ch-img-venda-2">
                                <div class="ch-info-wrap-vendas">
                                    <div class="ch-info-vendas">
                                        <div class="ch-info-front ch-img-venda-2"></div>
                                        <div class="ch-info-back">
                                            <h3>Katiau</h3>
                                            <p>PlayStation4 PRO</p>
                                        </div>
                                    </div>-
                                </div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <!-- Link PC GAME -->
                        <a href="~/Loja/PC">
                            <div class="ch-item ch-img-venda-3">
                                <div class="ch-info-wrap-vendas">
                                    <div class="ch-info-vendas">
                                        <div class="ch-info-front ch-img-venda-3"></div>
                                        <div class="ch-info-back">
                                            <h3>Katiau</h3>
                                            <p>PCGAME</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>

                    @foreach (var D in ViewBag.DLCs)
                    {
                        <li>
                            <!-- DLCs -->
                            <a href="#">
                                <!--@@ViewBag.Link-->
                                <div class="ch-item ch-img-venda-3">
                                    <div class="ch-info-wrap-vendas">
                                        <div class="ch-info-vendas">
                                            <div class="ch-info-front ch-img-venda-3"></div>
                                            <div class="ch-info-back">
                                                <h3>@(D.Nome)</h3>
                                                <p> COMPRAR </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!---->
    <!-- para dar o espaçamento-->
    <div class="storeImagem">
    </div>
    <!--teamend-->
    <div class="copywrite">
        <div class="container">
            <p> © 2017 Katiau. Todos os direitos reservados| Design by <a href="http://w3layouts.com/" style="color: #B01030;">W3layouts</a></p>
        </div>
    </div>
    <!---->

</body>
</html>